# LLM provider configuration
LLM_PROVIDER=mock
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-4.1-mini
GEMINI_API_KEY=your-gemini-key
GEMINI_MODEL=gemini-1.5-pro
OPENAI_TEMPERATURE=0.4
GEMINI_TEMPERATURE=0.4

# Internal service endpoints
ORCHESTRATOR_URL=http://orchestrator:9100
ORCHESTRATOR_TIMEOUT=60
DOC_PARSER_URL=http://doc_parser:9200
DOC_PARSER_TIMEOUT=30

# Database & cache
DATABASE_URL=postgresql+psycopg://book_creator:book_creator@postgres:5432/book_creator
REDIS_URL=redis://redis:6379/0

# Object storage (MinIO)
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=book-creator

# Vector store
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# App settings
DEFAULT_CATEGORY_COLORS=History:#7c3aed,Psychology:#6366f1,PopularScience:#14b8a6,Health:#22d3ee

# Security & authentication
# Generate a Fernet key with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
BOOK_CREATOR_ENCRYPTION_KEY=replace-with-fernet-key
BOOK_CREATOR_ADMIN_EMAIL=admin@local
BOOK_CREATOR_ADMIN_PASSWORD=change-me
BOOK_CREATOR_SESSION_TTL_MINUTES=720
BOOK_CREATOR_SESSION_COOKIE_SECURE=0
BOOK_CREATOR_SESSION_COOKIE_SAMESITE=lax
